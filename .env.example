# PostgreSQL / Supabase
# Use DATABASE_URL when possible (recommended)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME

# Discrete connection parts (some libraries prefer these)
PGHOST=HOST
PGPORT=5432
PGUSER=USER
PGPASSWORD=PASSWORD
PGDATABASE=DBNAME

# Supabase public client config (public_key)
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=YOUR_PUBLIC_ANON_KEY

# Optional (server-side only; never expose to client)
# SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY
PORT=3001
NODE_ENV=development
DATABASE_URL=postgresql://user:password@localhost:5432/avaliacion

# Firebase Admin (for server-side scripts only; NEVER expose to client)
# Use one of the two options below:
# 1) Path to service account JSON file
FIREBASE_SERVICE_ACCOUNT_PATH=
# 2) Or inline JSON (useful in CI) - keep it out of git history
FIREBASE_SERVICE_ACCOUNT_JSON=

# Firestore seed target (app uses workspaces/{workspaceId}/...)
FIREBASE_WORKSPACE_ID=edu.xunta.gal

# Optional deterministic IDs (safe to re-run seeding)
FIREBASE_DEMO_CLASSROOM_ID=demo_6A
FIREBASE_DEMO_STUDENT1_ID=demo_lucia_perez
FIREBASE_DEMO_STUDENT2_ID=demo_mateo_garcia
